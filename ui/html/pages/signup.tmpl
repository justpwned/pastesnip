{{define "title"}}Signup{{end}}

{{define "main"}}
<form action="/user/signup" method="POST" novalidate>
    <div>
        <label for="signup-name">Name:</label>
        {{with .Form.FieldErrors.name}}
        <label for="signup-name" class="error">{{.}}</label>
        {{end}}
        <input type="text" name="name" id="signup-name" value="{{.Form.Name}}">
    </div>
    <div>
        <label for="signup-email">Email:</label>
        {{with .Form.FieldErrors.email}}
        <label for="signup-email" class="error">{{.}}</label>
        {{end}}
        <input type="email" name="email" id="signup-email" value="{{.Form.Email}}">
    </div>
    <div>
        <label for="signup-password">Password:</label>
        {{with .Form.FieldErrors.password}}
        <label for="signup-password" class="error">{{.}}</label>
        {{end}}
        <input type="password" name="password" id="signup-password">
    </div>
    <div>
        <input type="submit" value="Signup">
    </div>
</form>
{{end}}
